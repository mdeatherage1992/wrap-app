<head><script>
  $(document).ready(function () {
  $('#dtBasicExample').DataTable();
  $('.dataTables_length').addClass('bs-select');
  });

</script></head>
<center>
<h1>Welcome to the Parserizer!</h1>
<h3>Please Input your Config String</h3>
<%=form_for(@job)do |t| %>
<%= t.text_area :clients, class:"form-control" %><br><br>
<%= submit_tag "Import Config File", class:"btn btn-primary" %>
<% end %>

<% if @jobs %>
<h3>Your Configs</h3>
<table id="dtBasicExample" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th class="th-sm">Server ID
      </th>
      <th class="th-sm">Host
      </th>
      <th class="th-sm">Server Load Alarm
      </th>
      <th class="th-sm">User
      </th>
      <th class="th-sm">Verbose
      </th>
      <th class="th-sm">Test Mode
      </th>
      <th class="th-sm">Debug Mode
      </th>
      <th class="th-sm">Log File Path
      </th>
      <th class="th-sm">Send Notifications
      </th>
      <th class="th-sm">Creation
      </th>
    </tr>
  </thead>
  <tbody>
    <% @jobs.each do |t| %>
    <tr>
      <td><%= t.server_id %></td>
      <td><%= t.host %></td>
      <td><%= t.server_load_alarm.to_d %></td>
      <td><%= t.user %></td>
      <td><%= t.verbose %></td>
      <td><%= t.test_mode %></td>
      <td><%= t.debug_mode %></td>
      <td><%= t.log_file_path %></td>
      <td><%= t.send_notifications %></td>
      <td><%= time_ago_in_words(t.created_at) %></td>
    </tr>
  <% end %>
    </tbody>
  <tfoot>
    <tr>
      <th>Server ID
      </th>
      <th>Host
      </th>
      <th>Server Load Alarm
      </th>
      <th> User
      </th>
      <th> Verbose
      </th>
      <th> Test Mode
      </th>
      <th>Debug Mode
      </th>
      <th>File Path
      </th>
      <th>Send Notifications
      </th>
      <th>Creation
      </th>
    </tr>
  </tfoot>
</table>
<% end %>


</center>
